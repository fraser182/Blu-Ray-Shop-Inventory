<h1>Edit: <%= @bluray.name %></h1>


<form class="form" id="new_bluray" action="/blurays/<%=@bluray.id %>" method="post">

    <label for="name" >Name</label>
    <input type="text" name="name" value="<%=@bluray.name%>">

    <label for="description">Description</label>
    <input type="text" name="description" value="<%=@bluray.description%>">

    <label for="stock_quantity">Stock Quantity</label>
    <input type="number" name="stock_quantity" value="<%=@bluray.stock_quantity%>">

    <label for="cost_price">Cost Price</label>
    <input type="number" name="cost_price" value="<%=@bluray.cost_price%>">

    <label for="selling_price">Selling Price</label>
    <input type="number" name="selling_price" value="<%=@bluray.selling_price%>">

    <label for="genre">Genre</label>
    <input type="text" name="genre" value="<%=@bluray.genre%>">

    <label for="imdb_rating">IMDB Rating</label>
    <input type="number" name="imdb_rating" value="<%=@bluray.imdb_rating%>">

  <label for="supplier"> Supplier</label>
    <select name="supplier_id">

      <% for supplier in @suppliers %>
      <option <%= 'selected' if supplier.id == @bluray.supplier_id %> value="<%=supplier.id%>"><%=supplier.name%></option>
      <%end %>

    </select>
    <input class="btn_submit" type="submit" value="Save">
  </form>
